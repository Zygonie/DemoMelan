extends layout

block content
  div.container  
    div.col-md-6.col-md-offset-3
      h1
        span.fa.fa-sign-in
        | Signup
      if (message.length > 0)
        div.alert.alert-danger #{message}
      form(action="/signup", method="post", role="form")
        div.form-group
          label Username
          input.form-control(type="text", name="username")
        div.form-group
          label email
          input.form-control(type="email", name="email")
        div.form-group
          label Password
          input.form-control(type="password", name="password")
        button.btn.btn-warning.btn-lg(type="submit") Signup
      hr
      p Already have an account? 
        a(href="/login") Login
      p Or go  
        a(href="/") home